{
  "name": "__MSG_extName__",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "__MSG_extDesc__",
  "permissions": [ 
      "contextMenus", 
      "tabs",
      "http://*/*",
      "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery.slim.min.js",
        "content.js"
      ]
    }
  ],
  "minimum_chrome_version": "6.0.0.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "default_locale": "en"
}