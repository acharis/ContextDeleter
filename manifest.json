{
  "manifest_version": 3,
  "name": "ContextDeleter",
  "description": "ContextDeleter allows you to delete HTML elements on the fly.",
  "version": "2.0.0",
  "permissions": [ 
      "contextMenus", 
      "tabs", 
      "http://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": [
        "content.js",
        "jquery/3.0.0-slim/jquery.slim.min.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "content.js",
    "jquery/3.0.0-slim/jquery.slim.min.js"
  ]
}