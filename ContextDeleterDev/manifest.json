{
  "manifest_version": 2,
  "name": "ContextDeleter",
  "description": "Chrome extension that allows you to delete elements from the context menu.",
  "version": "0.1",
  "permissions": [ 
      "contextMenus", 
      "tabs", 
      "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js", "jquery.min.js"]
    }
  ],
  "web_accessible_resources": [
    "content.js",
    "jquery.min.js"
  ]
}